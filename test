import React, {Component} from 'react';
import PropTypes from 'prop-types';
import Plotly from 'plotly.js';

export default class Listener_maxbox extends Component {    
    render() {
       const {id, aim, style} = this.props;
       const gd = document.getElementById(aim);
       
       function attach() {
         var xaxis = gd._fullLayout.mapbox._subplot.xaxis;
         var yaxis = gd._fullLayout.mapbox._subplot.yaxis;
         var l = gd._fullLayout.margin.l;
         var t = gd._fullLayout.margin.t;
         
         gd.addEventListener('mousemove', function(evt) {
           var xInDataCoord = xaxis.p2c(evt.x - l);
           var yInDataCoord = yaxis.p2c(evt.y - t);
           Plotly.relayout(gd, 'title', xInDataCoord +' and '+ yInDataCoord );
         });
       }

       Plotly.relayout(gd,'title').then(attach);           
       return (
            <div 
              id = {id}
              style = {style}>{gd._fullLayout.title}
              </div>
        );
    }
}

Listener_maxbox.propTypes = {
    id : PropTypes.string.isRequired,
    aim : PropTypes.string.isRequired,
    style : PropTypes.object
};
